<form method="post" action="" class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="name">Name</label>
    <div class="controls">
      <input type="text" name="name" value="<%= category.name %>">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="writer">Writer</label>
    <div class="controls">
      <input type="text" name="writer" value="<%= writer.name %>">
      <small class="help-inline">
        Name of the person writing this category.
      </small>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="weekday">Weekday</label>
    <div class="controls">
      <input type="text" name="weekday" value="<%= category.weekday %>">
      <small class="help-inline">0 - 6</small>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn btn-primary" type="submit">Edit</button>
  </div>
</form>
