<% var category = categories[indexInCollection] %>
<li class="well" style="padding: 1em">
  <h3>
  <%- router.link('category', category.name, category) %>
  <% if (everyauth.loggedIn) { %>
    <span><%- router.link('edit-category', 'edit', category) %></span>
  <% } %>
  </h3>
  <% if (category.post && category.post.content) { %>
    <h4>
      <%= category.post.title %>
      <% if (everyauth.loggedIn) { %>
        <span><%- router.link('edit-post', 'edit', category.post) %></span>
      <% } %>
    </h4>
    <%- category.post.content.split('</p>', 1)[0] %>
    <a href="<%= router.url('post', category.post) %>">
      Read&nbsp;more&nbsp;Â»</a>
    </p> <% /* Closes the post preview paragraph */ %>
  <% } %>
</li>
