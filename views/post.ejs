<article>
  <header>
    <h2>
      <%= post.title %>
      <% if (everyauth.loggedIn) { %>
        <span>
          <%- router.link('edit-post', 'edit', post) %>
        </span>
      <% } %>
    </h2>

    <p>
      Posted
      <time datetime="<%= post.date.toISOString() %>" pubdate>
        <%= moment(post.date).fromNow() %></time>.

      Tags: <%= post.tags.join(', ') %>
    </p>
  </header>

  <%- post.content %>
</article>
